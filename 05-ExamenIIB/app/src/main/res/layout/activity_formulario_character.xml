<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6CBEC"
    tools:context=".views.FormularioCharacter">

    <TextView
        android:id="@+id/tv_top_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/tv_nombre_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/et_nombre_character"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Type name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/tv_edad_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/et_edad_character"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Type age"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_character"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_nombre_character"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_character" />

    <TextView
        android:id="@+id/tv_pelicula_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403" />

    <EditText
        android:id="@+id/et_pelicula_character"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Type movie"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_edad_character"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_edad_character"
        app:layout_constraintTop_toBottomOf="@+id/et_edad_character"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/tv_alias_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alias:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <EditText
        android:id="@+id/et_alias_character"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Type alias"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_pelicula_character"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_pelicula_character"
        app:layout_constraintTop_toBottomOf="@+id/et_pelicula_character" />

    <TextView
        android:id="@+id/tv_FADate_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Acting Date:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671" />

    <EditText
        android:id="@+id/et_FADate_character"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Set Date"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/et_alias_character"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/et_alias_character"
        app:layout_constraintTop_toBottomOf="@+id/et_alias_character" />

    <TextView
        android:id="@+id/tv_actor_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actor:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <EditText
        android:id="@+id/et_actor_character"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Type Actor"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_FADate_character"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_FADate_character"
        app:layout_constraintTop_toBottomOf="@+id/et_FADate_character" />

    <Button
        android:id="@+id/btn_cancelar_character"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#673AB7"
        android:text="cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_actor_character"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_actor_character"
        app:layout_constraintTop_toBottomOf="@+id/et_actor_character"
        app:layout_constraintVertical_bias="0.542" />

    <Button
        android:id="@+id/btn_aceptar_character"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#673AB7"
        android:text="ok"
        app:layout_constraintEnd_toEndOf="@+id/et_actor_character"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_actor_character"
        app:layout_constraintTop_toBottomOf="@+id/et_actor_character" />
</androidx.constraintlayout.widget.ConstraintLayout>